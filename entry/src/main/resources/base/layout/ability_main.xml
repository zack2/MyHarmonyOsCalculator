<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="center"
    ohos:orientation="vertical"
    ohos:padding="8vp">

    <TextField
        ohos:id="$+id:input_output"
        ohos:height="300vp"
        ohos:text_cursor_visible="true"
        ohos:width="match_parent"/>
    <Text
        ohos:id="$+id:result"
        ohos:height="70vp"
        ohos:width="match_parent"
        ohos:below="$id:input_output"
        ohos:text="0"
        />
    <Button
        ohos:id="$+id:clear"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:below="$id:result"
        ohos:background_element="#87CEEB"
        ohos:text_size="27fp"
        ohos:padding="8vp"
        ohos:top_margin="5vp"
        ohos:bottom_margin="15vp"
        ohos:text="Effacer"/>

    <DirectionalLayout
        ohos:id="$+id:container_calc"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:below="$id:clear"
        ohos:padding="8vp"
        ohos:background_element="#87CEEB"
        ohos:orientation="horizontal">

        <TableLayout
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:weight="3"
            ohos:row_count="5"
            ohos:column_count="3"
            ohos:align_parent_start="true"
          >

            <Text
                ohos:height="60vp"
                ohos:width="60vp"
                ohos:background_element="$graphic:background_ability_main"
                ohos:margin="8vp"
                ohos:text="%"
                ohos:text_alignment="center"
                ohos:text_size="20fp"/>
            <Text
                ohos:height="60vp"
                ohos:width="60vp"
                ohos:background_element="$graphic:background_ability_main"
                ohos:margin="8vp"
                ohos:text="CE"
                ohos:text_alignment="center"
                ohos:text_size="20fp"/>
            <Text
                ohos:height="60vp"
                ohos:width="60vp"
                ohos:background_element="$graphic:background_ability_main"
                ohos:margin="8vp"
                ohos:text="C"
                ohos:text_alignment="center"
                ohos:text_size="20fp"/>

            <Text
                ohos:id="$+id:sept"
                ohos:height="60vp"
                ohos:width="60vp"
                ohos:background_element="$graphic:background_ability_main"
                ohos:margin="8vp"
                ohos:text="7"
                ohos:text_alignment="center"
                ohos:text_size="20fp"/>
            <Text
                ohos:id="$+id:huit"
                ohos:height="60vp"
                ohos:width="60vp"
                ohos:background_element="$graphic:background_ability_main"
                ohos:margin="8vp"
                ohos:text="8"
                ohos:text_alignment="center"
                ohos:text_size="20fp"/>
            <Text
                ohos:id="$+id:neuf"
                ohos:height="60vp"
                ohos:width="60vp"
                ohos:background_element="$graphic:background_ability_main"
                ohos:margin="8vp"
                ohos:text="9"
                ohos:text_alignment="center"
                ohos:text_size="20fp"/>
            <Text
                ohos:id="$+id:quatre"
                ohos:height="60vp"
                ohos:width="60vp"
                ohos:background_element="$graphic:background_ability_main"
                ohos:margin="8vp"
                ohos:text="4"
                ohos:text_alignment="center"
                ohos:text_size="20fp"/>
            <Text
                ohos:id="$+id:cinq"
                ohos:height="60vp"
                ohos:width="60vp"
                ohos:background_element="$graphic:background_ability_main"
                ohos:margin="8vp"
                ohos:text="5"
                ohos:text_alignment="center"
                ohos:text_size="20fp"/>
            <Text
                ohos:id="$+id:six"
                ohos:height="60vp"
                ohos:width="60vp"
                ohos:background_element="$graphic:background_ability_main"
                ohos:margin="8vp"
                ohos:text="6"
                ohos:text_alignment="center"
                ohos:text_size="20fp"/>
            <Text
                ohos:id="$+id:un"
                ohos:height="60vp"
                ohos:width="60vp"
                ohos:background_element="$graphic:background_ability_main"
                ohos:margin="8vp"
                ohos:text="1"
                ohos:text_alignment="center"
                ohos:text_size="20fp"/>
            <Text
                ohos:id="$+id:deux"
                ohos:height="60vp"
                ohos:width="60vp"
                ohos:background_element="$graphic:background_ability_main"
                ohos:margin="8vp"
                ohos:text="2"
                ohos:text_alignment="center"
                ohos:text_size="20fp"/>
            <Text
                ohos:id="$+id:trois"
                ohos:height="60vp"
                ohos:width="60vp"
                ohos:background_element="$graphic:background_ability_main"
                ohos:margin="8vp"
                ohos:text="3"
                ohos:text_alignment="center"
                ohos:text_size="20fp"/>
            <Text
                ohos:id="$+id:plus_moins"
                ohos:height="60vp"
                ohos:width="60vp"
                ohos:background_element="$graphic:background_ability_main"
                ohos:margin="8vp"
                ohos:text="+/-"
                ohos:text_alignment="center"
                ohos:text_size="20fp"/>
            <Text
                ohos:id="$+id:zero"
                ohos:height="60vp"
                ohos:width="60vp"
                ohos:background_element="$graphic:background_ability_main"
                ohos:margin="8vp"
                ohos:text="0"
                ohos:text_alignment="center"
                ohos:text_size="20fp"/>
            <Text
                ohos:id="$+id:virgule"
                ohos:height="60vp"
                ohos:width="60vp"
                ohos:background_element="$graphic:background_ability_main"
                ohos:margin="8vp"
                ohos:text=","
                ohos:text_alignment="center"
                ohos:text_size="20fp"/>
        </TableLayout>
        <TableLayout
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:background_element="#87CEEB"
            ohos:row_count="1"
            ohos:column_count="1"
            ohos:weight="1"
            ohos:align_parent_end="true"
           >

            <Text
                ohos:id="$+id:division"
                ohos:height="60vp"
                ohos:width="60vp"
                ohos:background_element="$graphic:background_ability_main"
                ohos:margin="8vp"
                ohos:text="/"
                ohos:text_alignment="center"
                ohos:text_size="20fp"/>
            <Text
                ohos:id="$+id:multiplication"
                ohos:height="60vp"
                ohos:width="60vp"
                ohos:background_element="$graphic:background_ability_main"
                ohos:margin="8vp"
                ohos:text="*"
                ohos:text_alignment="center"
                ohos:text_size="20fp"/>
            <Text
                ohos:id="$+id:soustraction"
                ohos:height="60vp"
                ohos:width="60vp"
                ohos:background_element="$graphic:background_ability_main"
                ohos:margin="8vp"
                ohos:text="-"
                ohos:text_alignment="center"
                ohos:text_size="20fp"/>
            <Text
                ohos:id="$+id:addition"
                ohos:height="60vp"
                ohos:width="60vp"
                ohos:background_element="$graphic:background_ability_main"
                ohos:margin="8vp"
                ohos:text="+"
                ohos:text_alignment="center"
                ohos:text_size="20fp"/>
            <Text
                ohos:id="$+id:egal"
                ohos:height="60vp"
                ohos:width="60vp"
                ohos:background_element="$graphic:background_ability_main"
                ohos:margin="8vp"
                ohos:text="="
                ohos:text_alignment="center"
                ohos:text_size="20fp"/>
        </TableLayout>
    </DirectionalLayout>


</DependentLayout>